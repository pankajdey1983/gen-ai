{
  "name": "@pankajdey1983/azure-devops-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Azure DevOps pull request code reviews with strategy templates, comment management, and pattern tracking",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "azure-devops-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "PR-STRATEGY-TEMPLATES.md",
    "QUICKREF-PR-TEMPLATES.md"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js",
    "test": "node test-mock.js",
    "test:real": "node test-simple.js",
    "test:interactive": "node test-local.js",
    "test:comprehensive": "node test-comprehensive.js",
    "test:optional": "node test-optional-repo.js",
    "test:comment-status": "node test-comment-status.js",
    "test:pr-changes": "node test-pr-changes.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "azure-devops",
    "pull-request",
    "code-review",
    "pr-review",
    "code-review-templates",
    "devops",
    "copilot",
    "ai-tools"
  ],
  "author": "Pankaj Dey <pankajdey1983@github>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pankajdey1983/gen-ai.git"
  },
  "bugs": {
    "url": "https://github.com/pankajdey1983/gen-ai/issues"
  },
  "homepage": "https://github.com/pankajdey1983/gen-ai#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "azure-devops-node-api": "^14.1.0",
    "simple-git": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "dotenv": "^17.2.3",
    "typescript": "^5.7.2"
  }
}
