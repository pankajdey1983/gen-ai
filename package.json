{
  "name": "azure-devops-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Azure DevOps pull request comment management and pattern tracking",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "azure-devops-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "test": "node test-mock.js",
    "test:real": "node test-simple.js",
    "test:interactive": "node test-local.js",
    "test:comprehensive": "node test-comprehensive.js",
    "test:optional": "node test-optional-repo.js",
    "test:comment-status": "node test-comment-status.js",
    "test:pr-changes": "node test-pr-changes.js"
  },
  "keywords": [
    "mcp",
    "azure-devops",
    "pull-request",
    "code-review"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "azure-devops-node-api": "^14.1.0",
    "simple-git": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "dotenv": "^17.2.3",
    "typescript": "^5.7.2"
  }
}
